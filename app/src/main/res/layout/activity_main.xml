<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ice_blue"
    tools:context="youngjung.test.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:id="@+id/lin_home">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#1f2431"
            android:text="HOME"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_below="@+id/lin_home"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:id="@+id/go_mypage"
        android:background="@color/white"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="28dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/sym_def_app_icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="26dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:textSize="14sp"
                        android:textColor="#1f2431"
                        android:text="최다희"
                        android:paddingRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoSizeTextType="uniform"
                        android:textSize="14sp"
                        android:textColor="#7f6ff1"
                        android:text="탕진이" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:textSize="12sp"
                    android:textColor="#1f2431"
                    android:text="미국여행 비행기 티켓 값 모으기"
                    android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/warm_grey"
                        android:text="달성"
                        android:paddingRight="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/lipstick"
                        android:text="2.5%" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/sym_def_app_icon"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/show_money"
        android:layout_below="@+id/go_mypage"
        android:layout_marginTop="27dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/sym_def_app_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/warm_grey"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="목표 금액"
                android:autoSizeTextType="uniform"
                android:layout_marginVertical="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#1f2431"
                android:text="4,000,000원"
                android:autoSizeTextType="uniform"
                />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:textColor="#eaeef4"></View>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/sym_def_app_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/warm_grey"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="목표 금액"
                android:layout_marginVertical="2dp"
                android:autoSizeTextType="uniform"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#1f2431"
                android:text="4,000,000원"
                android:autoSizeTextType="uniform"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:layout_below="@+id/show_money"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/btn_request"
        android:textSize="14sp"
        android:textColor="@color/dark"
        android:text="의뢰하기"
        android:background="@drawable/main_btn"
        android:layout_marginHorizontal="34dp"
        android:layout_marginVertical="24dp"/>
    <Button
        android:layout_below="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/btn_send"
        android:textSize="14sp"
        android:textColor="@color/dark"
        android:text="평가하기"
        android:background="@drawable/main_btn"
        android:layout_marginHorizontal="34dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_send"
        android:layout_below="@+id/btn_send"
        android:layout_marginTop="17dp"
        android:text="logout" />

    <Button
        android:id="@+id/btn_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginStart="31dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/btn"
        android:text="DB" />
</RelativeLayout>
