            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    tools:text="클리오 팬슬 아이라이너" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/pale_grey_two" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_money"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/a12" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="15,000원"
                        android:textColor="#393939"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="친구 집에 놀러가서 친구 아이라이너를 써봤는데 완전 저한테 딱이더라구요!! 하루종일 안 지워지고 좋아요. 다음 주에 세일하면 사려는데 지금 펜 아이라인이 2개 있는데 고민되는데 어떡하죠?"
                    android:textColor="#393939"
                    android:textSize="12sp" />
            </LinearLayout>

            <!--유저 정보-->
            <LinearLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="73dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--현재 유저 성별-->
                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#202432"
                        android:layout_gravity="center"
                        android:textSize="12sp" />

                    <!--성별-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv1"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:textColor="@color/warm_grey"
                        android:text="성별" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@color/pale_grey_two" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--현재 유저 목표 금액-->
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#393939"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:textSize="12sp" />

                    <!--목표 금액-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv2"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:textColor="@color/warm_grey"
                        android:text="목표금액" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@color/pale_grey_two" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--현재 유저 한달 생활비-->
                    <TextView
                        android:id="@+id/tv_money_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#393939"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:textSize="12sp" />

                    <!--한달 생활비-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv3"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:textColor="@color/warm_grey"
                        android:text="한달 생활비" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_yes"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/aboy_btn"
                    android:text="허"
                    android:textColor="@color/dark_two"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="14sp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="32dp" />

                <Button
                    android:id="@+id/btn_no"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/aboy_btn"
                    android:text="불허"
                    android:textColor="@color/dark_two"
                    style="?android:attr/borderlessButtonStyle"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
